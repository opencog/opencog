        as->getSortedHandleSet(back_inserter(latvAtoms), ATOM, true, &latvSort);
        for (unsigned int i = 0; i < latvAtoms.size() - 1; i++) {
            TS_ASSERT(latvSort(latvAtoms[i + 1], latvAtoms[i]) == false);
        }
        
        logger().debug("LTIThenTVAscendingSort");
        
