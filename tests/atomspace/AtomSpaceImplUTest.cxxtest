        AtomSpace::LTIAboveThreshold ltiAbove(800);
        atomSpace->atomTable.getHandlesByTypePred(back_inserter(highLTI), NODE, true, &ltiAbove);
        for (unsigned int i = 0; i < highLTI.size(); i++) {
            TS_ASSERT(ltiAbove (highLTI[i]) );
        }
        TS_ASSERT(highLTI.size() == 1U);
        TS_ASSERT(highLTI[0] == atoms[1]);
        logger().debug("END TEST: getHandleSetFiltered");
    }

