void HandleEntry2HandleSeq(HandleEntry& src, HandleSeq& dest)
{
    dest = src.toHandleVector();
}

void setSTI(Handle h, AttentionValue::sti_t stiValue)
{
    /* Make a copy */
    AttentionValuePtr old_av = h->getAttentionValue();
    AttentionValuePtr new_av = createAV(
        stiValue,
        old_av->getLTI(),
        old_av->getVLTI());
    h->setAttentionValue(new_av);
}


void setLTI(Handle h, AttentionValue::lti_t ltiValue)
{
    AttentionValuePtr old_av = h->getAttentionValue();
    AttentionValuePtr new_av = createAV(
        old_av->getSTI(),
        ltiValue,
        old_av->getVLTI());
    h->setAttentionValue(new_av);
}

bool isLink(Handle h) 
{ return classserver().isA(h->getType(), LINK); }

bool isNode(Handle h) 
{ return classserver().isA(h->getType(), NODE); }

bool isSource(Handle source, Handle link)
{
    LinkPtr l(LinkCast(link));
    if (l) return l->isSource(source);
    return false;
}

HandleSeq createSimpleGraph(AtomSpaceImpl* atomSpace, const char* baseName)
{
    char buf[256];
    HandleSeq testAtoms;
    int baseNameLength;

    memset(buf, 0, 256);
    baseNameLength = strlen(baseName);
    strcpy(buf, baseName);

    TruthValuePtr tv1 = SimpleTruthValue::createTV(0.001f, 0.00001f);
    TruthValuePtr tv2 = SimpleTruthValue::createTV(0.001f, 0.00001f);
    TruthValuePtr tv3 = SimpleTruthValue::createTV(0.5f, 0.99f);
    buf[baseNameLength] = '1';
    Handle h1 = atomSpace->addNode(CONCEPT_NODE, buf, tv1);
    setSTI(h1, AV1_STI);
    setLTI(h1, AV1_LTI);
    buf[baseNameLength] = '2';
    Handle h2 = atomSpace->addNode(CONCEPT_NODE, buf, tv2);
    setSTI(h2, AV2_STI);
    setLTI(h2, AV2_LTI);
    buf[baseNameLength] = '3';
    Handle h3 = atomSpace->addNode(CONCEPT_NODE, buf, tv3);
    setSTI(h3, AV3_STI);
    setLTI(h3, AV3_LTI);

    HandleSeq outgoing1;
    outgoing1.push_back(h2);
    outgoing1.push_back(h3);
    Handle l1 = atomSpace->addLink(LIST_LINK, outgoing1, tv1);
    HandleSeq outgoing2;
    outgoing2.push_back(h1);
    outgoing2.push_back(l1);
    Handle l2 = atomSpace->addLink(EVALUATION_LINK, outgoing2, tv2);

    testAtoms.push_back(h1);
    testAtoms.push_back(h2);
    testAtoms.push_back(h3);
    testAtoms.push_back(l1);
    testAtoms.push_back(l2);

    return testAtoms;
}

Handle addRealAtom(AtomSpaceImpl& as, AtomPtr atom,
                   TruthValuePtr tvn = TruthValue::NULL_TV())
{
    TruthValuePtr newTV = (tvn->isNullTv()) ? atom->getTruthValue() : tvn;
    // Check if the given Atom reference is of an atom
    // that was not inserted yet.  If so, adds the atom. Otherwise, just sets
    // result to the correct/valid handle.

    Handle result;
    NodePtr node(NodeCast(atom));
    if (node) {
        result = as.atomTable.getHandle(node->getType(), node->getName());
        if (result == Handle::UNDEFINED) {
            return as.addNode(node->getType(), node->getName(), newTV);
        }
    } else {
        LinkPtr link(LinkCast(atom));
        result = as.atomTable.getHandle(link->getType(), link->getOutgoingSet());
        if (result == Handle::UNDEFINED) {
            return as.addLink(link->getType(), link->getOutgoingSet(), newTV);
        }
    }
    TruthValuePtr currentTV = result->getTruthValue();
    if (currentTV->isNullTv()) {
        result->setTruthValue(newTV);
    } else {
        TruthValuePtr mergedTV = currentTV->merge(newTV);
        result->setTruthValue(mergedTV);
    }
    return result;
}


