    void atomMerged1(const Handle& h, const TruthValuePtr& tv_old, const TruthValuePtr& tv_new)
    {
        TS_ASSERT(atomSpace->getSize() == 1);
        logger().debug("atomMerged1: %s", h->toString().c_str());
