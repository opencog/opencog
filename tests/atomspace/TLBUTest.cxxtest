#include <iostream>
#include <fstream>
#include <streambuf>
#include <stdio.h>

#include <opencog/atomspace/Node.h>
#include <opencog/atomspace/TLB.h>
#include <opencog/atomspace/atom_types.h>
#include <opencog/util/exceptions.h>

using namespace opencog;
using namespace std;

class TLBUTest :  public CxxTest::TestSuite
{
private:

public:
    TLBUTest() {
    }

    void setUp() {
    }

    void tearDown() {
    }

    void testPrint() {
        std::streambuf* cout_sbuf = std::cout.rdbuf(); // save original sbuf
        std::ofstream   fout("TLB_cout.txt");
        std::cout.rdbuf(fout.rdbuf()); // redirect 'cout' to a 'fout'
        TLB::print();
        std::cout.rdbuf(cout_sbuf); // restore the original stream buffer
        remove("TLB_cout.txt");
    }

    void testAdd() {
        NodePtr n(new Node(CONCEPT_NODE, "test"));
        TLB::addAtom(n);
        TS_ASSERT_THROWS(TLB::addAtom(n),InvalidParamException);
    }

    void testRemove() {
        NodePtr n(new Node(CONCEPT_NODE, "test"));
        Handle h = TLB::addAtom(n);
        TS_ASSERT_EQUALS(TLB::removeAtom(h),n);
        TS_ASSERT(TLB::removeAtom(h) == NULL);
    }

};
