        std::cout << "Print timline of BDretrieved2" << std::endl;
        std::cout << BCretrieved.getEntries()[1].getStartTime() << std::endl;*/

        TS_ASSERT(BD1.equals(BCretrieved.getEntries()[0])
                  && BD2.equals(BCretrieved.getEntries()[1]));
    }

