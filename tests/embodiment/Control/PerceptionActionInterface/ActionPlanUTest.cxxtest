    void testSize() {
        ActionPlan plan;
        TS_ASSERT(plan.size() == 0);
        plan.addAction(AvatarAction(ActionType::STEP_FORWARD()));
        TS_ASSERT(plan.size() == 1);
        plan.addAction(AvatarAction(ActionType::ROTATE_LEFT()));
        TS_ASSERT(plan.size() == 2);
    }

    void testMarkAndCheckMarkMethods() {
        ActionPlan plan;
        plan.addAction(AvatarAction(ActionType::STEP_FORWARD()));
        plan.addAction(AvatarAction(ActionType::ROTATE_LEFT()));
        plan.addAction(AvatarAction(ActionType::ROTATE_RIGHT()));

        TS_ASSERT(!plan.isTried(1));
        TS_ASSERT(!plan.isTried(2));
        TS_ASSERT(!plan.isTried(3));
        TS_ASSERT(!plan.isDone(1));
        TS_ASSERT(!plan.isDone(2));
        TS_ASSERT(!plan.isDone(3));
        TS_ASSERT(!plan.isFailed(1));
        TS_ASSERT(!plan.isFailed(2));
        TS_ASSERT(!plan.isFailed(3));
        TS_ASSERT(!plan.isFinished());
        TS_ASSERT(!plan.hasFailed());

        plan.markAsTried(1);
        TS_ASSERT(plan.isTried(1));
        TS_ASSERT(!plan.isTried(2));
        TS_ASSERT(!plan.isTried(3));
        TS_ASSERT(!plan.isDone(1));
        TS_ASSERT(!plan.isDone(2));
        TS_ASSERT(!plan.isDone(3));
        TS_ASSERT(!plan.isFailed(1));
        TS_ASSERT(!plan.isFailed(2));
        TS_ASSERT(!plan.isFailed(3));
        TS_ASSERT(!plan.isFinished());
        TS_ASSERT(!plan.hasFailed());

        plan.markAsTried(2);
        plan.markAsTried(3);
        TS_ASSERT(plan.isTried(1));
        TS_ASSERT(plan.isTried(2));
        TS_ASSERT(plan.isTried(3));
        TS_ASSERT(!plan.isDone(1));
        TS_ASSERT(!plan.isDone(2));
        TS_ASSERT(!plan.isDone(3));
        TS_ASSERT(!plan.isFailed(1));
        TS_ASSERT(!plan.isFailed(2));
        TS_ASSERT(!plan.isFailed(3));
        TS_ASSERT(!plan.isFinished());
        TS_ASSERT(!plan.hasFailed());

        plan.markAsFailed(2);
        TS_ASSERT(plan.isTried(1));
        TS_ASSERT(plan.isTried(2));
        TS_ASSERT(plan.isTried(3));
        TS_ASSERT(!plan.isDone(1));
        TS_ASSERT(!plan.isDone(2));
        TS_ASSERT(!plan.isDone(3));
        TS_ASSERT(!plan.isFailed(1));
        TS_ASSERT(plan.isFailed(2));
        TS_ASSERT(!plan.isFailed(3));
        TS_ASSERT(!plan.isFinished());
        TS_ASSERT(plan.hasFailed());

        plan.markAsDone(1);
        TS_ASSERT(plan.isTried(1));
        TS_ASSERT(plan.isTried(2));
        TS_ASSERT(plan.isTried(3));
        TS_ASSERT(plan.isDone(1));
        TS_ASSERT(!plan.isDone(2));
        TS_ASSERT(!plan.isDone(3));
        TS_ASSERT(!plan.isFailed(1));
        TS_ASSERT(plan.isFailed(2));
        TS_ASSERT(!plan.isFailed(3));
        TS_ASSERT(!plan.isFinished());
        TS_ASSERT(plan.hasFailed());

        plan.markAsDone(3);
        TS_ASSERT(plan.isTried(1));
        TS_ASSERT(plan.isTried(2));
        TS_ASSERT(plan.isTried(3));
        TS_ASSERT(plan.isDone(1));
        TS_ASSERT(!plan.isDone(2));
        TS_ASSERT(plan.isDone(3));
        TS_ASSERT(!plan.isFailed(1));
        TS_ASSERT(plan.isFailed(2));
        TS_ASSERT(!plan.isFailed(3));
        TS_ASSERT(plan.isFinished());
        TS_ASSERT(plan.hasFailed());

        ActionPlan plan2;
        plan2.addAction(AvatarAction(ActionType::STEP_FORWARD()));
        plan2.addAction(AvatarAction(ActionType::ROTATE_LEFT()));
        plan2.addAction(AvatarAction(ActionType::ROTATE_RIGHT()));
        plan2.markAsDone(1);
        plan2.markAsDone(2);
        plan2.markAsDone(3);
        TS_ASSERT(plan2.isFinished());
        TS_ASSERT(!plan2.hasFailed());

    }

