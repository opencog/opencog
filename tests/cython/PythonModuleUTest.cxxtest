        // process request
        cogserver.runLoopStep();

        // create agent
        AgentPtr pythonTestAgent = cogserver.createAgent("test_agent_w_run_exception.TestRunExceptionAgent",true);
        TS_ASSERT(pythonTestAgent != NULL);

        cogserver.runLoopStep();

        // check that the exception was reported
        PyMindAgentPtr pta = std::dynamic_pointer_cast<PyMindAgent>(pythonTestAgent);
        TS_ASSERT_DIFFERS( pta->last_result.find("IndexError"),
                std::string::npos );

    }

