{
	private:
		PatternMatchEngine pme;
		PatternMatch pm;
		AtomSpace *as;

		// These handles are documented below.
		Handle hconst;
		Handle hsoln_a;
		Handle hsoln_b;
		Handle hsoln_c;

		Handle hpred_a;
		Handle hpred_b;
		Handle hpred_c;

		Handle hitem_1;
		Handle hitem_2;
		Handle hitem_3;
		Handle hlist;
		Handle hprnode;
		Handle hoc;

		Handle hshort_list;
		Handle hshort_prnode;
		Handle hshort_oc;

		Handle heval;
