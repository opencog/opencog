        std::cout << "Non-reduced type tree : " << tt << std::endl;

        reduce_type_tree(tt, tr);
        std::cout << "Reduced type tree : " << tt << std::endl;

        stringstream sst_red;
        sst_red << tt;

        string st = "boolean";
        TS_ASSERT_EQUALS(sst_red.str(), st);
    }

