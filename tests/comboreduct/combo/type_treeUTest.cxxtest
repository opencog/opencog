        type_tree_seq atl = get_signature_inputs(tt);
        arity_t a = type_tree_arity(tt);
        TS_ASSERT_EQUALS(a, -3);
        type_tree tti3 = argument_type_list_input_type(atl, a, 3);
        TS_ASSERT_EQUALS(tti3, type_tree(id::action_result_type));
    }

