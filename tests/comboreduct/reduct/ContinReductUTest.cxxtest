  //test_simplify4 :
  //log(x)+log(y) -> log(x*y)
  //log(x)-log(y) -> log(x/y)
  //log(c/x) -> -log(c^-1*x)
  //log(exp(x)*y) -> x+log(y)
  void test_simplify4() {
    string tree_str="*(+(log(+(#1 1)) log(+(#2 1))) +(log(+(#3 1)) *(log(+(#4 1)) -1)) log(/(5.0 +(#5 1))) log(*(exp(#6) +(#7 1))))";

    stringstream ss(tree_str);
    combo_tree tr;
    ss >> tr;

    int a = arity(tr);
    int s = sample_count(a);

    contin_input_table cti(s, a, rng);

